extends ../base
//- ../의 의미: 현재 directory 를 벗어나는 것.

block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="old password",name= "oldPassword", type="password", required)
        input(placeholder="New password",name= "newPassword", type="password", required)
        input(placeholder="Confirm password",name= "newPasswordConfirmation", type="password", required)
        input(value="Change password" , type="submit")